<% include ../partials/header  %>
<div class="page be-donors-page">
    <div class="page-navbar">
      <div class="container">
        <% include ../partials/nav %>
      </div>
    </div>
    <div class="head">
      <div class="container">
        <h1>Edit Patient</h1>
        <p>Reach out for Help</p>
      </div>
    </div>
    <section class="patient-area">
      <div class="container">
        <div class="be-donor">
          <form class="be-donor-form" action="/patient/edit/<%= patient.id %>" method="POST">
          <div class="profile"> <h4>Patient</h4>
            <div class="input-group">
              <input type="text" name="firstName" value="<%= patient.profile.firstName %>" placeholder="First Name" required/>
              <input type="text" name="middleName" value="<%= patient.profile.middleName %>" placeholder="Middle Name"/>
              <input type="text" name="lastName" value="<%= patient.profile.lastName %>" placeholder="Last Name" required/>
              <input type="number" name="age" value="<%= patient.profile.age %>" placeholder="Age" required/>
            </div>
          </div>
          <div class="location">
            <h4>Location</h4>
            <div class="input-group">
              <input type="text" name="place" value="<%= patient.profile.location.place %>" placeholder="Place" required/>
              <input type="text" name="state" value="<%= patient.profile.location.state %>" placeholder="State"/>
              <input type="text" name="country" value="<%= patient.profile.location.country %>" placeholder="Country" required/>
            </div>
          </div>
          <div class="information"> <h4>Information</h4>
            <div class="input-group">
              <select type="text" name="bloodGroup" required>
                <option
                <% if(patient.profile.bloodGroup === 'A+') {%>
                  selected
                <% } %>
                 value="A+">A+</option>
                <option
                <% if(patient.profile.bloodGroup === 'A-') {%>
                  selected
                <% } %>
                 value="A-">A-</option>
                <option
                <% if(patient.profile.bloodGroup === 'B+') {%>
                  selected
                <% } %>
                 value="B+">B+</option>
                <option
                <% if(patient.profile.bloodGroup === 'B-') {%>
                  selected
                <% } %>
                 value="B-">B-</option>
                <option
                <% if(patient.profile.bloodGroup === 'AB+') {%>
                  selected
                <% } %>
                 value="AB+">AB+</option>
                <option
                <% if(patient.profile.bloodGroup === 'AB-') {%>
                  selected
                <% } %>
                 value="AB-">AB-</option>
                <option
                <% if(patient.profile.bloodGroup === 'O+') {%>
                  selected
                <% } %>
                 value="O+">O+</option>
                <option
                <% if(patient.profile.bloodGroup === 'O-') {%>
                  selected
                <% } %>
                 value="O-">O-</option>
              </select>
              <input type="phone" name="phone" value="<%= patient.profile.phone %>" placeholder="Phone Number" required/>
            </div>
          </div>
          <div class="details"> <h4>Details</h4>
            <div class="input-group">
              <input type="text" name="problem" value="<%= patient.problem %>" placeholder="Problem" required/>
              <input type="number" min="1" max="20" name="units" value="<%= patient.units %>" placeholder="Units"/>
              <div class="radio-input">
                <h5>Type</h5>
                <div class="input-group">
                  <input type="radio"
                    <% if(patient.type === 'regular') { %>
                      checked
                    <% } %>
                  name="type" value="regular" required/> Regular
                  <input type="radio"
                    <% if(patient.type === 'emergency') { %>
                      checked
                    <% } %>
                   name="type" value="emergency" required/> Emergency
                </div>
              </div>
              <input type="date" name="requiredDate" value="<%= patient.requiredDate.getFullYear() %>-0<%= patient.requiredDate.getMonth() + 1 %>-0<%= patient.requiredDate.getMonth() %>" placeholder="Date" required/>
              <input type="text" name="contactInfo" value="<%= patient.profile.phone %>" placeholder="Contact Info" required/>
              <div class="radio-input">
                <h5>Solved</h5>
                <div class="input-group">
                  <input type="radio"
                    <% if(patient.solved) { %>
                      checked
                    <% } %>
                   name="solved" value="true" required/> Solved
                  <input type="radio"
                    <% if(!patient.solved) { %>
                      checked
                    <% } %>
                   name="solved" value="false" required/> Not Solved
                </div>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-submit">Update Patient</button>
        </form>
        </div>
      </div>
    </section>
  </div>
<% include ../partials/footer %>
